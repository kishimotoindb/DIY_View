<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:bear="http://schemas.android.com/apk/res-auto"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical">

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:onClick="onClick"
        android:text="add"
        android:textSize="20sp"/>

    <android.support.v4.widget.NestedScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/colorAccent"
        android:paddingLeft="50dp"
        android:paddingRight="100dp">

        <com.example.bear.diy_view.LabelWall
            android:id="@+id/wall"
            android:paddingBottom="10dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/colorPrimary"
            android:minHeight="200dp"
            android:paddingLeft="50dp"
            android:paddingRight="20dp"
            bear:emptyMsgOnLeftConner="false"
            android:paddingTop="50dp"
            bear:emptyMsgText="请添加金额"
            bear:emptyMsgTextColor="@android:color/white"
            bear:emptyMsgTextSize="20sp"
            bear:labelHorizontalSpace="1dp"
            bear:labelVerticalSpace="1dp"/>

    </android.support.v4.widget.NestedScrollView>
</LinearLayout>